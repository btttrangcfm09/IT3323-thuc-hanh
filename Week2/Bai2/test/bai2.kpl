// Test case for new KPL features

// Testing string data type
VAR
  myString: STRING;

BEGIN
  myString := "Hello, KPL!";
  PRINT(myString);

// Testing remainder operator
  PRINT(10 % 3); // Expected output: 1

// Testing new comment style
  // This is a single-line comment
  PRINT(5 + 5); // Expected output: 10

// Testing bytes data type
VAR
  myBytes: BYTES;

BEGIN
  myBytes := 0xFF;
  PRINT(myBytes);

// Testing exponentiation operator
  PRINT(2 ** 3); // Expected output: 8

// Testing REPEAT-UNTIL structure
  VAR
    counter: INTEGER;

  BEGIN
    counter := 0;
    REPEAT
      PRINT(counter);
      counter := counter + 1;
    UNTIL counter = 5;
END.